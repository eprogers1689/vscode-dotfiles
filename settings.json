{
    "workbench.colorTheme": "Monokai",
    "workbench.colorCustomizations": {
        "tab.activeBorderTop": "#e7e8df",
        "tab.activeBackground": "#34352f",
        "tab.inactiveBackground": "#272822",
    },
    "workbench.startupEditor": "none",
    "editor.scrollbar.verticalScrollbarSize": 0,
    "editor.tabCompletion": "on",
    "terminal.integrated.copyOnSelection": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.leader": "<Space>",
    "vim.normalModeKeyBindingsNonRecursive": [
        // make splits great again
        {
            "before": [
                "<leader>",
                "\\"
            ],
            "commands": [
                "workbench.action.splitEditor"
            ]
        },
        {
            "before": [
                "<leader>",
                "-"
            ],
            "commands": [
                "workbench.action.splitEditorDown"
            ]
        },
        // make explorer great again
        {
            "before": [
                "<leader>",
                "g",
                "r"
            ],
            "commands": [
                "workbench.files.action.showActiveFileInExplorer"
            ],
            "when": "viewContainer.workbench.view.explorer.enabled"
        },
        {
            "before": [
                "<leader>",
                "t",
                "r"
            ],
            "commands": [
                "workbench.files.action.focusFilesExplorer"
            ],
        },
        {
            "before": [
                "<leader>",
                "t",
                "t"
            ],
            "commands": [
                "workbench.action.toggleSidebarVisibility"
            ],
        },
        // Easy way to hide the peksy activitybar... boo activity bar
        {
            "before": [
                "<leader>",
                "a",
                "b"
            ],
            "commands": [
                "workbench.action.toggleActivityBarVisibility"
            ],
        },
        // Toggle zen mode
        {
            "before": [
                "<leader>",
                "z",
                "m"
            ],
            "commands": [
                "workbench.action.toggleZenMode"
            ],
        },
        // Toggle minimap
        {
            "before": [
                "<leader>",
                "m",
                "m"
            ],
            "commands": [
                "editor.action.toggleMinimap"
            ],
        },
        // Toggle breadcrumb
        {
            "before": [
                "<leader>",
                "b",
                "c"
            ],
            "commands": [
                "breadcrumbs.toggle"
            ],
        },
        // Find and Replace
        {
            "before": [
                "<leader>",
                "f",
                "r"
            ],
            "commands": [
                "editor.action.startFindReplaceAction"
            ],
        },
        // Text Search across files in repo
        {
            "before": [
                "<leader>",
                "s",
                "p"
            ],
            "commands": [
                "workbench.view.search"
            ]
        },
        // Find in files
        {
            "before": [
                "<leader>",
                "f",
                "f"
            ],
            "commands": [
                "workbench.action.quickOpen"
            ]
        },
        // Select Tab by number
        {
            "before": [
                "<leader>",
                "1"
            ],
            "commands": [
                "workbench.action.openEditorAtIndex1"
            ]
        },
        {
            "before": [
                "<leader>",
                "2"
            ],
            "commands": [
                "workbench.action.openEditorAtIndex2"
            ]
        },
        {
            "before": [
                "<leader>",
                "3"
            ],
            "commands": [
                "workbench.action.openEditorAtIndex3"
            ]
        },
        {
            "before": [
                "<leader>",
                "4"
            ],
            "commands": [
                "workbench.action.openEditorAtIndex4"
            ]
        },
        {
            "before": [
                "<leader>",
                "5"
            ],
            "commands": [
                "workbench.action.openEditorAtIndex5"
            ]
        },
        {
            "before": [
                "<leader>",
                "6"
            ],
            "commands": [
                "workbench.action.openEditorAtIndex6"
            ]
        },
        {
            "before": [
                "<leader>",
                "7"
            ],
            "commands": [
                "workbench.action.openEditorAtIndex7"
            ]
        },
        {
            "before": [
                "<leader>",
                "8"
            ],
            "commands": [
                "workbench.action.openEditorAtIndex8"
            ]
        },
        {
            "before": [
                "<leader>",
                "9"
            ],
            "commands": [
                "workbench.action.openEditorAtIndex9"
            ]
        },
        // Markdown Preview
        {
            "before": [
                "<leader>",
                "m",
                "p"
            ],
            "commands": [
                "markdown.showPreviewToSide"
            ]
        },
        // Go to source
        {
            "before": [
                "<leader>",
                "d",
                "f"
            ],
            "commands": [
                "editor.action.revealDefinition"
            ]
        },
        // Follow Link - useful for following a link in a Search File (i.e. the file created after you perform a search then click the 'Open in editor' button)
        {
            "before": [
                "<leader>",
                "f",
                "l"
            ],
            "commands": [
                "editor.action.openLink"
            ]
        },
        // Navigate back
        // VERY weird gotchya with MAC here - you may need to disable a DUMB setting where <space><space> on MAC is mapped to add a period.
        // Go into System Preferences -> Keyboard -> [Click the text tab] -> at the right there are a few checkbox you should uncheck the "Add period with double-space" option
        {
            "before": [
                "<leader>",
                "Space"
            ],
            "commands": [
                "extension.goto-previous-buffer"
            ]
        },
        // Delete White Space Manully
        {
            "before": [
                "<leader>",
                "w",
                "s"
            ],
            "commands": [
                "trailing-spaces.deleteTrailingSpaces"
            ]
        },
        // Keep Preview Tab Oben
        {
            "before": [
                "<leader>",
                "k",
                "o"
            ],
            "commands": [
                "workbench.action.keepEditor"
            ]
        },
        {
            "before": [
                "<leader>",
                "v",
                "i"
            ],
            "commands": [
                "editor.action.smartSelect.grow"
            ]
        },
        // Sort imports
        {
            "before": [
                "<leader>",
                "s",
                "i"
            ],
            "commands": [
                "editor.action.organizeImports"
            ]
        },
        // Fold Code
        {
            "before":[
                "<leader>",
                "f",
                "d"
            ],
            "commands": [
                "editor.foldRecursively"
            ]
        },
        {
            "before":[
                "<leader>",
                "u",
                "f"
            ],
            "commands": [
                "editor.unfoldRecursively"
            ]
        },
        {
            "before":[
                "<leader>",
                "f",
                "a"
            ],
            "commands": [
                "editor.foldAll"
            ]
        },
        {
            "before":[
                "<leader>",
                "u",
                "f",
                "a"
            ],
            "commands": [
                "editor.unfoldAll"
            ]
        },
        // Open all open buffers
        {
            "before": [
                "<leader>",
                "b"
            ],
            "commands": [
                {
                    "command": "workbench.action.quickOpen",
                    "args": ["edt "]
                }
            ]
        },
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        // Find and Replace in selection
        {
            "before": [
                "<leader>",
                "f",
                "r"
            ],
            "commands": [
                {
                    "command": "editor.action.startFindReplaceAction"
                },
                {
                    "command": "toggleFindInSelection"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "g"
            ],
            "commands": [
                "editor.action.smartSelect.grow"
            ]
        },
        {
            "before": [
                "<leader>",
                "s"
            ],
            "commands": [
                "editor.action.smartSelect.shrink"
            ]
        }
    ],
    "editor.lineNumbers": "on",
    "editor.renderWhitespace": "all",
    "extensions.ignoreRecommendations": true,
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "explorer.confirmDelete": false,
    "[typescript]": {
      "editor.tabSize": 2
    },
    "trailing-spaces.backgroundColor": "rgba(255,0,0,0.5)",
    "trailing-spaces.borderColor": "rgba(255,255,0,0.5)",
    "trailing-spaces.trimOnSave": true,
    "git.ignoreMissingGitWarning": true,
    "cSpell.userWords": [
        "awsapigateway",
        "awslog",
        "awslogs",
        "boto",
        "cicd",
        "dynatrace",
        "entreleadership",
        "esmodule",
        "everydollar",
        "faas",
        "Fargate",
        "financialwellness",
        "firelens",
        "innersource",
        "jwks",
        "lampogroup",
        "loggly",
        "logglytoken",
        "martech",
        "mulesoft",
        "newrelic",
        "PGPORT",
        "powertools",
        "pulumi",
        "pytest",
        "realestate",
        "Redrive",
        "rscom",
        "scaffolder",
        "smartdollar",
        "teamname",
        "tfstate",
        "unvalidated",
        "websystems"
    ],
    "[python]": {
        "editor.formatOnType": true
    },
    "editor.minimap.enabled": false,
    "security.workspace.trust.untrustedFiles": "open",
    "terminal.integrated.scrollback": 20000,
    "liveshare.anonymousGuestApproval": "reject",
    "workbench.activityBar.visible": false,
    "vim.foldfix": true,
}
